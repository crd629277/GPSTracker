<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/TrackerActionBar"
        android:layout_width="fill_parent"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/umeng_feedback_conversation_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="@string/menu_feedback"
            android:textColor="@color/snowhite"
            android:textSize="16dip" />
    </RelativeLayout>

    <com.umeng.fb.ui.ThreadView
        android:id="@+id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1.0"
        android:background="#EFEFEF"
        android:cacheColorHint="#EEEEEE"
        android:divider="#EFEFEF" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#d5d5d5" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:background="@drawable/time_background_border_bottom" />

    <RelativeLayout
        android:id="@+id/umeng_feedback_bottom_sub"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/time_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <EditText
            android:id="@+id/umeng_feedback_editTxtFb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dip"
            android:layout_toLeftOf="@+id/umeng_feedback_btnSendFb"
            android:layout_weight="1"
            android:maxLines="3"
            android:gravity="top" />

        <Button
            android:id="@+id/umeng_feedback_btnSendFb"
            style="@style/BigEndButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:text="Submit" />
    </RelativeLayout>

</LinearLayout>