<resources>

    <style name="Window" parent="@android:style/Theme.NoTitleBar"></style>

    <style name="Item.Content" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/highlight</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="Item.Title" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_column">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Status.Time" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Status.Records" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Status.Status" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/highlight</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Status.Distance" parent="Status.Status"></style>

    <style name="TrackerActionBar" parent="ActionBar">
        <item name="android:background">@color/actionbar_background</item>
    </style>

</resources>