<resources>

    <style name="Window" parent="@android:style/Theme.NoTitleBar"></style>
    
    <style name="LightBackground">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="Item.Content" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/mils</item>
        <item name="android:layout_marginRight">2dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Item.Title" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="Item.TitleSecond" parent="Item.Title">
        <item name="android:textColor">@color/title_second</item>
    </style>

    <style name="Status.Time" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Status.Records" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Status.Status" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/highlight</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Status.Distance" parent="Status.Status"></style>

    <style name="TrackerActionBar" parent="ActionBar">
        <item name="android:background">@drawable/bg_action_bar</item>
    </style>

    <style name="BigTitle">
        <item name="android:textColor">@color/mils</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="BitCounter" parent="BigTitle">
        <item name="android:textColor">@color/snowwhite</item>
        <item name="android:textSize">48sp</item>
        <item name="android:shadowColor">@color/mils</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="SecondTitle">
        <item name="android:textColor">@color/title_second</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
     <style name="BigButton">
        <item name="android:shadowColor">@color/mils</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/snowwhite</item>
        <item name="android:background">@drawable/btn_start</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="BigEndButton" parent="BigButton">
        <item name="android:background">@drawable/btn_end</item>

    </style>
    <style name="BigStartButton" parent="BigButton">
        <item name="android:background">@drawable/btn_start</item>
    </style>

    <style name="Cell">
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="Cell.Vertical" parent="Cell">
        <item name="android:background">@drawable/cell_border_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

    <style name="Cell.Horizontal" parent="Cell">
        <item name="android:background">@drawable/cell_border_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    
</resources>